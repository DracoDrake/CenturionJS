{
    "compilerOptions": {
      "target": "es2016",
      "lib": ["es6"],
      "module": "commonjs",
      "declaration": true,
      "outDir": "./build",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "allowJs": true,
      "resolveJsonModule": false,
      "sourceMap": true,
      "isolatedModules": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "unused", "**/__tests__/*"]
  }